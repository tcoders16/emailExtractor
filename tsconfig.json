{
  "compilerOptions": {
    /* Output settings */
    "outDir": "./dist",
    "rootDir": "./src",

    /* Language and module support */
    "target": "ES2020",
    "module": "CommonJS",
    "moduleResolution": "node",

    /* Strictness */
    "strict": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,

    /* Import JSON, .env, etc. */
    "resolveJsonModule": true,
    "allowSyntheticDefaultImports": true
  },
  "include": ["src"],
  "exclude": ["node_modules", "dist"]
}